<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom App Theme -->
    <style name="WordPressReader" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#D84315</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorSecondary">#000000</item>
        <item name="android:navigationBarColor" tools:targetApi="21" >#FF5722</item>

        <!-- Transparent Navigation Bar -->
        <!--<item name="android:windowTranslucentNavigation" tools:targetApi="19">true</item>-->

        <item name="android:actionBarTabStyle">@style/MyActionBarTabs</item>
        <!-- Support library compatibility -->
        <item name="actionBarTabStyle">@style/MyActionBarTabs</item>
    </style>

    <!-- ActionBar tabs styles -->
    <style name="MyActionBarTabs"
        parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- tab indicator -->
        <item name="android:background">@drawable/tab_indicator</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/tab_indicator</item>
    </style>

</resources>
